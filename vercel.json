{
  "version": 2,
  "builds": [
    { "src": "backend/api/**/*.js", "use": "@vercel/node" },
    { "src": "frontend/package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api", "dest": "/backend/api/index.js" },
    { "src": "/", "dest": "/backend/api/index.js" },
    { "src": "/api/auth/signup", "dest": "/backend/api/auth/signup.js" },
    { "src": "/api/auth/login", "dest": "/backend/api/auth/login.js" },
    { "src": "/api/auth/me", "dest": "/backend/api/auth/me.js" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}